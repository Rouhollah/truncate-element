{
    "compilerOptions": {
        "rootDirs": [
            "./src",
            "../sample"
        ],
        "outDir": "./sample-dist",
        "declaration": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es6",
        "allowJs": true,
        "noEmitOnError": true,
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "lib": [
            "es5",
            "dom"
        ]
    },
    "exclude": [
        "./src"
    ]
}