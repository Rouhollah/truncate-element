{
    "compilerOptions": {
        "outDir": "./dist/",
        "rootDir": "./src",
        "baseUrl": ".",
        "declaration": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es6",
        "allowJs": true,
        "noEmitOnError": true,
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
    },
    "include": [
        "src"
    ]
}